@using Novel.Common.Models
@{
    ViewData["Title"] = "Detail";
    List<NomicCatalog> catalogs = ViewBag.Catalogs;
    string  nomicTitle = ViewBag.NomicTitle;
}

<div class="tab-content" id="nav-tabContent">
    <h4>@nomicTitle</h4>
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        @foreach (var item in catalogs)
        {
            <div class="card   mb-3 border border-info rounded">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <a onclick="ReadDetail('@nomicTitle','@item.Title')" class="btn btn-outline-primary">阅  读</a>
                </div>
            </div>
        }
    </div>
</div>
<script>
    function ReadDetail(title, catalog) {
           window.location.href = "/Nomic/NomicContent?title=" + title + "&catalog=" + catalog;
    }
</script>
