@using Novel.Common.Models
@{
    ViewData["Title"] = "Index";
    List<Nomic> nomics = ViewBag.Nomics;
}

<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        @foreach (var item in nomics)
        {
            <div class="card   mb-3 border border-info rounded">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <a onclick="Detail('@item.Url')" class="btn btn-outline-primary">阅  读</a>
                </div>
            </div>
        }
    </div>
</div>
<script>
    function Detail(order) {
        window.location.href = "/Novel/Detail?id=" + order;
    }    
</script>
